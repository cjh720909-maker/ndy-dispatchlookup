generator client {
  provider = "prisma-client-js"
  output   = "../../lib/generated/auth"
}

datasource db {
  provider = "sqlite"
  url      = "file:./auth.db"
}

// 사용자/로그인 정보
model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  companyName String?  // "하회", "대상" 등
  createdAt   DateTime @default(now())
}

